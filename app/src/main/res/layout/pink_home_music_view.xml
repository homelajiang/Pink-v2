<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/white">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/music_album"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="#666666"
                app:fadeDuration="300" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/music_album"
                android:layout_toLeftOf="@+id/right_area"
                android:layout_toRightOf="@+id/music_album"
                android:layout_toStartOf="@+id/right_area"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/music_music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    tools:text="右肩の蝶" />

                <TextView
                    android:id="@+id/music_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="3dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    tools:text="のりP" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/right_area"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/music_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginRight="18dp"
                    tools:text="03:56" />

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/music_mode_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_repeat_black_24dp"
                    android:layout_alignBottom="@+id/music_time"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pink_music_controller_progress"
                android:layout_alignParentBottom="true"
                android:max="10000"
                android:progressDrawable="@drawable/music_ctrl_progress" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton

        android:id="@+id/music_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_play_circle_outline_black_36dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/music_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/music_play"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/music_play"
        android:layout_toStartOf="@+id/music_play"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_skip_next_black_24dp" />


</RelativeLayout>
