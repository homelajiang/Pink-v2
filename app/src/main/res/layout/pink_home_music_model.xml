<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/ctrl_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pink_music_controller_height"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pink_music_controller_album"
            android:background="@color/white">

            <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:id="@+id/music_album"
                android:layout_width="@dimen/pink_music_controller_album"
                android:layout_height="@dimen/pink_music_controller_album"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                fresco:fadeDuration="300" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/music_album"
                android:layout_toLeftOf="@+id/ctrl_play"
                android:layout_toRightOf="@+id/music_album"
                android:layout_toStartOf="@id/ctrl_play"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ctrl_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/ctrl_sub_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="New Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ctrl_next"
                android:layout_width="@dimen/pink_music_controller"
                android:layout_height="@dimen/pink_music_controller"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/mp.theme.dark_blue.colorPrimary"
                android:tintMode="src_in"
                app:srcCompat="@drawable/ic_skip_next_black_24dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ctrl_play"
                android:layout_width="@dimen/pink_music_controller"
                android:layout_height="@dimen/pink_music_controller"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ctrl_next"
                android:layout_toStartOf="@+id/ctrl_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/mp.theme.dark_blue.colorPrimary"
                android:tintMode="src_in"
                app:srcCompat="@drawable/ic_play_circle_outline_black_36dp" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pink_music_controller_progress"
            android:max="10000" />
    </LinearLayout>
</android.support.v7.widget.CardView>
