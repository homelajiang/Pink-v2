<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingLeft="@dimen/pink_widget_padding_horizontal"
    android:paddingRight="@dimen/pink_widget_padding_horizontal"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/todo_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="1个待办事项"
            android:textSize="@dimen/pink_widget_title" />

        <android.support.v7.widget.AppCompatImageView
            style="@style/PinkWidget.Icon"
            app:srcCompat="@drawable/ic_event_black_24dp" />

</LinearLayout>