<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PinkVideoInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/video_share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/ic_share_black_24dp"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:text="@string/pink_share" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/video_download"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:drawablePadding="5dp"
        android:drawableTop="@drawable/ic_file_download_black_24dp"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:text="@string/pink_download" />
</LinearLayout>
