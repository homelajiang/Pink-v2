<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mp.theme.dark_blue.colorPrimary</item>
        <item name="colorPrimaryDark">@color/mp.theme.dark_blue.colorPrimaryDark</item>
        <item name="colorAccent">@color/mp.theme.dark_blue.colorAccent</item>

        <item name="android:textColorPrimary">@color/mp.theme.dark_blue.textColorPrimary</item>
        <item name="android:textColorSecondary">@color/mp.theme.dark_blue.textColorSecondary</item>

        <item name="android:windowBackground">@color/mp.theme.dark_blue.background</item>

        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorControlActivated">@color/mp.theme.dark_blue.colorControlActivated</item>
        <item name="colorControlHighlight">@color/mp.theme.dark_blue.colorControlHighlight</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>

        <!--ActionMode-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/PINK.Theme.Widget.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/PINK.Theme.Widget.ActionMode.CloseButton
        </item>

        <!--AlertDialog-->
        <item name="alertDialogTheme">@style/PINK.Theme.Widget.AlertDialog</item>


        <!--PopupMenu-->
        <item name="popupMenuStyle">@style/PINK.Theme.Widget.PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/PINK.Theme.TextAppearance.LargePopupMenu
        </item>
        <item name="textAppearanceSmallPopupMenu">@style/PINK.Theme.TextAppearance.SmallPopupMenu
        </item>

    </style>

    <style name="PINK.Theme" parent="AppTheme" />

    <style name="PINK.Theme.Launcher">
        <item name="android:windowBackground">@drawable/bg_launcher</item>
    </style>

    <!--widget-->

    <style name="PINK.Theme.Widget" />

    <!--Widget-->

    <style name="PINK.Theme.Widget.Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/mp.line</item>
    </style>

    <style name="PINK.Theme.Widget.Divider.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PINK.Theme.Widget.Divider.Line.Vertical">
        <item name="android:layout_height">@dimen/mp.divider.line</item>
    </style>

    <style name="PINK.Theme.Widget.Divider.Line.Horizontal">
        <item name="android:layout_width">@dimen/mp.divider.line</item>
    </style>

    <style name="PINK.Theme.Widget.SegmentedControl">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_segmented_control_item_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/mp.padding.normal</item>
        <item name="android:paddingRight">@dimen/mp.padding.normal</item>
        <item name="android:button">@null</item>
    </style>

    <style name="PINK.Theme.Widget.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/PINK.Theme.TextAppearance.Light.Toolbar.Title</item>
    </style>

    <style name="PINK.Theme.Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/mp.theme.dark_blue.actionMode.background</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="backgroundSplit">@null</item>
        <item name="titleTextStyle">@style/PINK.Theme.TextAppearance.ActionMode.Title</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="PINK.Theme.Widget.ActionMode.CloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="PINK.Theme.Widget.AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/mp.theme.dark_blue.background</item>
    </style>

    <style name="PINK.Theme.Widget.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/mp.popupMenu.background</item>
        <item name="android:dropDownHorizontalOffset">-24dp</item>
    </style>

    <style name="PINK.Theme.Widget.RecyclerView">
        <item name="android:id">@id/recycler_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/mp.list.scrollThumb</item>
        <item name="android:scrollbarSize">@dimen/mp.list.scrollbarSize</item>
        <item name="layoutManager">@string/pink_list_layoutManager_linear</item>
    </style>

    <style name="MP.Theme.Widget.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:id">@id/progress_bar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="PINK.Theme.Widget.SegmentedControl.Left">
        <item name="android:background">@drawable/selector_segmented_left</item>
    </style>

    <style name="PINK.Theme.Widget.SegmentedControl.Right">
        <item name="android:background">@drawable/selector_segmented_right</item>
    </style>

    <!-- TextAppearance -->

    <style name="PINK.Theme.TextAppearance">
        <item name="fontPath">@string/pink_font_roboto_monospace_regular</item>
    </style>

    <style name="PINK.Theme.TextAppearance.Toolbar">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PINK.Theme.TextAppearance.Light.Toolbar.Title" parent="PINK.Theme.TextAppearance.Toolbar">
        <item name="android:textColor">@color/mp.theme.dark_blue.colorAccent</item>
    </style>

    <style name="PINK.Theme.TextAppearance.ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="PINK.Theme.TextAppearance.List">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PINK.Theme.TextAppearance.List.EndSummary">
        <item name="android:id">@id/text_view_summary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mp.text.hint</item>
        <item name="android:textSize">@dimen/mp.text.hint</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/mp.padding.large</item>
    </style>

    <style name="PINK.Theme.TextAppearance.List.Title">
        <item name="android:textColor">@color/selector_list_title_text</item>
        <item name="android:textSize">@dimen/mp.text.list.title</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PINK.Theme.TextAppearance.List.Hint">
        <item name="android:textColor">@color/selector_list_hint_text</item>
        <item name="android:textSize">@dimen/mp.text.list.hint</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PINK.Theme.TextAppearance.List.Empty">
        <item name="android:id">@id/text_view_empty</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/mp.margin.xlarge</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mp.text.hint</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PINK.Theme.TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="PINK.Theme.TextAppearance.SmallPopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <!--name为声明的"属性集合"名，可以随便取，但是最好是设置为跟我们的View一样的名称-->
    <declare-styleable name="OWLoadingView">
        <attr name="default_size" format="dimension" />
        <attr name="hexagon_color" format="color"/>
    </declare-styleable>

    <style name="BannerDefaultStyle">
        <item name="android:layout_marginTop">10dp</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">3000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">#44aaaaaa</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/bga_banner_selector_point_hollow</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dp</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">6dp</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">3dp</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|center_horizontal</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">10sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@android:color/white</item>
    </style>

</resources>
